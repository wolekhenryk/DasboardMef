<UserControl x:Class="ChartsWidget.ChartsWidgetView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinHeight="220" MinWidth="320">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Wykres słupkowy" FontWeight="Bold" Margin="0,0,0,8"/>

        <Border Grid.Row="1" BorderBrush="#444" BorderThickness="1" CornerRadius="6" Padding="8">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                <!-- Obszar rysowania ~180 px wysokości -->
                <ItemsControl x:Name="Bars" Height="180" VerticalAlignment="Bottom">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="4,0" VerticalAlignment="Bottom">
                                <!-- Słupek -->
                                <Border Width="28"
                        Height="{Binding Height}"
                        Background="#6EA8FE"
                        CornerRadius="6,6,0,0"
                        VerticalAlignment="Bottom"/>
                                <!-- Etykieta -->
                                <TextBlock Text="{Binding Label}"
                           FontSize="10"
                           Margin="0,4,0,0"
                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
